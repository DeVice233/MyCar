<Window x:Class="MyCar.Desktop.Windows.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCar.Desktop.Windows"
        mc:Ignorable="d"
        Title="AddCarWindow" Height="1020" Width="750" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="WhiteSmoke">
        <Border BorderThickness="5" BorderBrush="{StaticResource ValorantRedBrush}" 
                Panel.ZIndex="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="450"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <StackPanel Width="200" HorizontalAlignment="Center">
                        <Label Content="Изображение:" Foreground="Black" FontSize="16"/>
                        <Image Source="{Binding ImageCar}" Width="180" Height="180"/>
                        <Button Content="Выбрать картинку" Command="{Binding Save}" Grid.Row="1" Grid.Column="1" Height="30" Width="180" Margin="5" HorizontalAlignment="Center" 
                                VerticalAlignment="Bottom" FontFamily="Century Gothic" Foreground="Green"
                                Background="Transparent" BorderBrush="Green" FontSize="16"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Артикул авто:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox DataContext="{Binding AddCarVM}" Text="{Binding Articul}" HorizontalAlignment="Right" VerticalAlignment="Center" Width="280" Height="30"/>
                    <Label Content="Цена авто:" Grid.Row="1" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBox DataContext="{Binding AddCarVM}" Grid.Row="1" Text="{Binding CarPrice}" VerticalAlignment="Center" HorizontalAlignment="Right" Width="280" Height="30"/>
                    <StackPanel Grid.Row="2" Margin="0 10 0 0">
                        <Rectangle HorizontalAlignment="Stretch"  Fill="Gray" Height="0.5" Width="370"/>
                        <Label Content="Марка авто" FontFamily="{StaticResource CenturyGothicBold}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListBox ItemsSource="{Binding Marks}" SelectedItem="{Binding SelectedMark}" Grid.Column="0" DisplayMemberPath="MarkName"/>
                        <ListBox ItemsSource="{Binding CarMarks}" SelectedItem="{Binding SelectedCarMark}" DisplayMemberPath="MarkName" Grid.Column="1"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button FontSize="18" Grid.Column="0" Style="{StaticResource RegularButton}"
                                Height="30" Margin="5" Content="Выбрать" Command="{Binding AddMark}"/>
                        <Button FontSize="18" Grid.Column="1" Style="{StaticResource RegularButton}"
                                Height="30" Margin="5" Content="Убрать" Command="{Binding RemoveMark}"/>
                    </Grid>
                    <StackPanel Grid.Row="5" Margin="0 10 0 0">
                        <Rectangle HorizontalAlignment="Stretch"  Fill="Gray" Height="0.5" Width="370"/>
                        <Label Content="Модель авто" FontFamily="{StaticResource CenturyGothicBold}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                    <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button FontSize="18" Grid.Column="0" Style="{StaticResource RegularButton}"
                                Height="30" Margin="5" Content="Выбрать" Command="{Binding AddModel}"/>
                        <Button FontSize="18" Grid.Column="1" Style="{StaticResource RegularButton}"
                                Height="30" Margin="5" Content="Убрать" Command="{Binding RemoveModel}"/>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListBox ItemsSource="{Binding Models}" SelectedItem="{Binding SelectedModel}" Grid.Column="0" DisplayMemberPath="ModelName"/>
                        <ListBox ItemsSource="{Binding CarModels}" SelectedItem="{Binding SelectedCarModel}" DisplayMemberPath="ModelName" Grid.Column="1"/>
                    </Grid>
                    <StackPanel Grid.Row="12" Margin="0 10 0 0">
                        <Rectangle HorizontalAlignment="Stretch"  Fill="Gray" Height="0.5" Width="370"/>
                        <Label Content="Кузов авто" FontFamily="{StaticResource CenturyGothicBold}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                    <Label Content="Тип кузова:" Grid.Row="13" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding BodyTypes}" SelectedItem="{Binding SelectedBodyType}" DisplayMemberPath="TypeName" HorizontalAlignment="Right" Width="280" Height="30" Grid.Row="13"/>

                    <StackPanel Grid.Row="8" Margin="0 10 0 0">
                        <Rectangle HorizontalAlignment="Stretch"  Fill="Gray" Height="0.5" Width="370"/>
                        <Label Content="Характеристики авто" FontFamily="{StaticResource CenturyGothicBold}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                    <ListBox Grid.Row="9" ItemsSource="{Binding CharacteristicsCar}" SelectedItem="{Binding SelectedCharacteristicCar}" HorizontalContentAlignment="Stretch" Background="White" FontSize="16">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Characteristic.CharacteristicName}"/>
                                            <Label Content="|"/>
                                            <Label Content="{Binding CharacteristicValue}">
                                            </Label>
                                            <Label Content="|"/>
                                            <Label Content="{Binding Characteristic.Unit.UnitName}">
                                            </Label>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Grid.Row="10" Margin="0 10 0 0">
                        <Rectangle HorizontalAlignment="Stretch"  Fill="Gray" Height="0.5" Width="370"/>
                        <Label Content="Конфигурация авто" FontFamily="{StaticResource CenturyGothicBold}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                    <Label Grid.Row="11" Margin="0 0 0 0" Content="Конфигурация" FontSize="16" HorizontalAlignment="Left" Width="130"/>
                    <ComboBox ItemsSource="{Binding Equipments}" SelectedItem="{Binding SelectedEquipment}" DisplayMemberPath="NameEquipment" Grid.Row="11" HorizontalAlignment="Center" Width="150" FontSize="15" Height="30"/>
                    <TextBox Text="{Binding SelectedEquipment.MinPrice}" Width="150" Tag="Цена конфигурации" HorizontalAlignment="Right" Grid.Row="11" Height="30"/>
                </Grid>
                <Button Content="Отмена" Width="150" Click="Button_Click" Grid.Row="1" Grid.Column="1" Height="30" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom"  FontFamily="Century Gothic" Foreground="Red"
                    Background="Transparent" BorderBrush="Red" FontSize="16"/>
                <Button Content="Сохранить" Command="{Binding SaveCar}" Grid.Row="1" Width="150" Grid.Column="1" Height="30" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontFamily="Century Gothic" Foreground="Green"
                    Background="Transparent" BorderBrush="Green" FontSize="16"/>

            </Grid>

        </Border>
    </Grid>
</Window>

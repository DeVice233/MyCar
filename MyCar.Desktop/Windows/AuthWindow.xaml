<Window x:Class="MyCar.Desktop.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCar.Desktop.Windows"
        mc:Ignorable="d"
      Title="AuthWindow" Height="400" Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Background="Transparent">

    <Border CornerRadius="10" Background="White" MouseDown="Border_MouseDown">
        <Grid  >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="0 10 10 0">
                <Button Content="x" Style="{StaticResource WindowCloseButton}"
                        Width="20" HorizontalAlignment="Right"
                        
                        />
            </StackPanel>
            <StackPanel Grid.Row="1" HorizontalAlignment="Left" Margin="30 0 0 0">
                <Image Source="/Images/car_256.png" Width="100"
                               Height="100"  >
                </Image>
            </StackPanel>
            <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextBlock.TextAlignment="Center">

                <Grid Background="Transparent" 
                            Width="330"
                            Margin="50 0 50 0">

                    <StackPanel>
                        <TextBlock Text="Вход"   
                               FontSize="{StaticResource FontSizeXXLarge}" 
                               FontFamily="{StaticResource CenturyGothic}"
                               Foreground="{StaticResource ValorantRedBrush}"/>

                        <TextBox Text="" Tag="Email" Style="{StaticResource TextBoxLogin}"/>

                        <TextBox Text="" Tag="Пароль" Style="{StaticResource TextBoxLogin}"/>

                        <Button Content="Войти" Style="{StaticResource ButtonLogin}"
                             Margin="0 50 0 0"       HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>

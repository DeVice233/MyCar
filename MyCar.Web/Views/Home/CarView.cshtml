@model IEnumerable<ModelsApi.CarApi>

@{
    ViewData["Title"] = "Catalog";
}


<div class="row wow bounceInUp align-items-center justify-content-center">


    <section class="main-content">
        <div class="container">

            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header mb-5 mt-5">
                        <h3 class="text-white">Featured Product</h3>
                        <h2 class="text-white">Popular Products</h2>
                    </div>
                </div>
            </div>

            <div class="row">

                @foreach (var i in Model)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="MySingle-product mt-3 mb-3">

                            <div class="product-Photo">
                                <a asp-action="DetailsCarView" asp-controller="Car" asp-route-CarName="@i.CarName"><img src="~/CarImages/@i.PhotoCar" /></a>
                            </div>

                            <div class="product-Details">
                                <a style="text-decoration:none;" asp-action="DetailsCarView" asp-controller="Car" asp-route-CarName="@i.CarName"><h3 class="product-title text-white">@i.CarName</h3></a>
                                @*<h2 class="product-title text-white">@i.CarName</h2>*@

                                <div class="product-addons-Details d-flex justify-content-between">

                                    <div class="product-price">
                                        <h2 class="text-white">@i.CarPrice</h2>
                                    </div>

                                    <div class="product-links">
                                        <a href="#"><i class="fas fa-heart"></i></a>
                                        <a href="#"><i class="fas fa-plus"></i></a>
                                    </div>

                                </div>
                            </div>

                            

                            @*<div class="part-1">

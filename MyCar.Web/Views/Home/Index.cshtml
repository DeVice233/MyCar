@model IEnumerable<ModelsApi.MarkCarApi>

<h2>Марки</h2>
<div class="cards">
        @foreach(MarkCarApi markCar in Model)
        {
        <div class="card">
        <div class="card-image">
            <img src="~/MarkImages/@markCar.MarkPhoto"/>
        </div> 
        <div class="card-content">
            <div class="card-title">
                @markCar.MarkName
            </div>
            <a asp-action="GetAuto" asp-controller="Home" asp-route-id="@markCar.ID">
                Подробнее
            </a>
        </div>
        </div>
        }
</div>


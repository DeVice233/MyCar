@model MyCar.Web.Models.LoginModel
<div class="row" style="justify-content:center; align-items:center; display:block; height:100%;">
    <div class="container text-center align-middle d-flex justify-content-center">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" style="width:300px;">
        <h2>Sign In</h2>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group" style="margin-top: 30px;">
                <input type="text"  required="" autofocus="" id="inputEmail" asp-for="UserName" class="form-control" placeholder="Email адрес" />
                <span asp-validation-for="UserName" />
            </div>
            <div class="form-group" style="margin-top: 50px;" >
                <input type="password" id="password-input" class="form-control" placeholder="Введите пароль" asp-for="Password" />
                <span asp-validation-for="Password" />
                <label style="margin-top:20px; margin-bottom:20px;"><input type="checkbox" class="password-checkbox" />Показать пароль</label>
            </div>
            <div class="form-group" style="margin-bottom:20px; width: 300px;">
                <input type="submit" data-toggle="tooltip" data-placement="right" title="Если вы зарегистрированы на этом сайте то просто зайдите под своим логином и паролем" value="Войти" class="btn btn-primary btn-lg active" role="button" aria-pressed="true" style="width: 300px;" />
            </div>
            <a asp-action="Register" class="btn btn-primary btn-lg active" data-toggle="tooltip" data-placement="left" title="Для регистрации на нашем сайте нажмите эту кнопку" role="button" style="width: 300px;" aria-pressed="true" asp-controller="Account">
                Регистрация
            </a>
        </div>
    </form>
</div>
</div>

@model MyCar.Web.Models.LoginModel
<div class="container-fluid align-items-center justify-content-center h-100" style="display: flex;">
    <div class="row" style="justify-content:center; display: flex; align-items:center; padding-top: 6%;">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" >            
            <div>
                <h2 style="color: white; display: flex; justify-content:center;">Вход на сайт</h2>
                <div class="validation" asp-validation-summary="ModelOnly" style="color:red; font-size: 16px; justify-content:center; display:flex;"></div>
                <div class="form-group" style="margin-top: 30px;">
                    <input type="text"  required="" autofocus="" id="inputEmail" asp-for="UserName" class="form-control" placeholder="Email адрес" style="width: 300px; text-align:center; display:flex; justify-content:center;"/>
                    <span asp-validation-for="UserName" class="text-white"/>
                </div>
                <div class="form-group" style="margin-top: 50px;">
                    <input type="password" id="myInput" class="form-control" placeholder="Введите пароль" asp-for="Password" style="width: 300px; text-align:center; display:flex; justify-content:center;"/>
                    <span asp-validation-for="Password" class="text-white"/>
                    <label style="margin-top:20px; margin-bottom:20px; color:white; display:flex; justify-content:center;">
                        <input type="checkbox" onclick="myFunction()" class="password-checkbox"/>
                            Показать пароль
                    </label>
                </div>
                <div class="form-group" style="margin-bottom:20px; display: flex; justify-content:center;">
                    <input class="atuin-btn" id="success" type="submit" role="button" title="Если вы зарегистрированы на этом сайте то просто зайдите под своим логином и паролем" value="Войти" data-toggle="tooltip" data-placement="right"/>  
                </div>
                <div class="form-group" style="margin-bottom:20px; display: flex; justify-content:center;">
                    <a asp-action="Register" class="atuin-btn" data-toggle="tooltip" data-placement="left" title="Для регистрации на нашем сайте нажмите эту кнопку" role="button" style="align-content:center; text-align:center;" aria-pressed="true" asp-controller="Account">
                        Регистрация
                    </a>
                </div>
                <div class="form-group" style="margin-bottom:20px; display: flex; justify-content:center;">
                    <a asp-action="EditForgotUser" class="atuin-btn" data-toggle="tooltip" data-placement="left" title="Для изменения пароля нажмите эту кнопку" role="button" style="align-content:center; text-align:center;" aria-pressed="true" asp-controller="Account">
                        Забыли пароль?
                    </a>

                </div>
            </div>
        </form>
    </div>
</div>

@model MyCar.Web.Models.RegisterModel
@{
}

<div class="row" style="justify-content:center; align-items:center; display:block; height:100%; position: fixed; top: 50%; left: 50%; width: 50%; height: auto; margin: -200px 0 0 -25%;">
    <div class="container text-center align-middle d-flex justify-content-center">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" >
            <h2 style="color: white;">Изменение пароля</h2>
            <div>
                <div class="form-group" style="margin-top: 30px;">
                    <h5 class="h3 mb-3 font-weight-normal" style="color: white;">Введите пароль</h5>
                    <input type="password" id="myInputRegister" class="form-control" placeholder="Введите пароль" asp-for="Password" width="300px;"/>
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group" style="margin-top: 50px;">
                    <label asp-for="ConfirmPassword" style="color: white;">Повторите пароль</label><br />
                    <input class="form-control" asp-for="ConfirmPassword" id="exampleInputPassword1" width="300px;"/>
                    <label style="margin-top:20px; margin-bottom:20px; color:white;">
                        <input type="checkbox" onclick="myFunction()" class="password-checkbox"/>
                            Показать пароль
                    </label>
                </div>
                <div class="form-group" style="margin-bottom:20px;">
                    <input class="atuin-btn" id="success" type="submit" role="button" value="Изменить пароль" data-toggle="tooltip" data-placement="right"/>  
                </div>
            </div>
        </form>
    </div>
</div>

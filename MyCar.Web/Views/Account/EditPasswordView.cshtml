@model MyCar.Web.Models.RegisterModel
@{
}

<div class="row" style="justify-content:center; align-items:center; display:block; height:100%; position: fixed; top: 40%; left: 50%; width: 50%; height: auto; margin: -200px 0 0 -25%;">
    <div class="container text-center align-middle d-flex justify-content-center">
        <form asp-action="EditPassword" asp-controller="Account" asp-anti-forgery="true" >
            <h2 style="color: white;">Изменение пароля</h2>
            <div>
                <div class="form-group" style="margin-top: 30px;">
                    <h5 class="mb-3 font-weight-normal" style="color: white;">Введите логин</h5>
                    <input type="text" class="form-control" style="text-align:center;" placeholder="Введите логин" asp-for="UserName" width="300px;"/>
                    <span asp-validation-for="UserName" class="text-white"/>
                </div>
                <div class="form-group" style="margin-top: 30px;">
                    <h5 class="mb-3 font-weight-normal" style="color: white;">Введите пароль</h5>
                    <input type="password" id="myPasswordEdit" class="form-control text-center" style="text-align:center;" placeholder="Введите новый пароль" asp-for="Password" width="300px;"/>
                    <span asp-validation-for="Password" class="text-white"/>
                    <label style="margin-top:20px; margin-bottom:20px; color:white;">
                        <input type="checkbox" onclick="myFunctionRegister2()" class="password-checkbox"/>
                            Показать пароль
                    </label>
                </div>
                <div class="form-group" style="margin-top: 20px;">
                    <h5 style="color: white; text-align:center;">Повторите новый пароль</h5><br />
                    <input class="form-control" asp-for="ConfirmPassword" placeholder="Введите новый пароль повторно" id="myInputRegister" width="300px;"/>
                    <span asp-validation-for="ConfirmPassword" class="text-white"/>
                </div>
                <div class="form-group" style="margin-top:40px;">
                    <input class="atuin-btn" id="success" type="submit" role="button" value="Изменить пароль" data-toggle="tooltip" data-placement="right"/>  
                </div>
            </div>
        </form>
    </div>
</div>

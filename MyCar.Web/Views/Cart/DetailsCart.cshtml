    <div class="row wow bounceInUp align-items-center justify-content-center">
        <section class="main-content">
            <div class="container-fluid">

                <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="header mb-5 mt-5">
                            <h1 class="text-white">Оформление заказа</h1>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                        
                    </div>
                    <div class="col-md-4 col-lg-6">
                        @{
                            var sum = @Model.Sum(s => s.Price * s.CountChange);
                         }
                        <h4 class="text-white">Сумма заказа: @sum</h4>
                    </div>
                </div>
                <div class="row justify-content-center text-center">
                    <div class="col-md-8 col-lg-6">
                    </div>
                    <div class="col-md-4 col-lg-6">
                        <div class="glass-btn glass-btn-red text-center" style="width:200px;">
                            <a asp-action="ConfirmOrder" asp-controller="Cart" class="stretched-link" style="color: black;">Оплатить заказ</a>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #171717">
                    <div class="row" style="background-color: #171717">
                        <div class="col-md-12">

                            @foreach (var car in @Model)
                            {
                                    <div class="row align-items-center p-4">

                                        <div class="col-4 productCart-Photo d-flex justify-content-center">
                                            <a asp-action="DetailsCarView" asp-controller="Car" asp-route-id="@car.SaleCarId"><img src="~/CarImages/@car.SaleCar.Car.PhotoCar"></a>
                                        </div>

                                        <div class="col-8 d-flex justify-content-between">

                                            <div class="col m-3">
                                                <h4 class="row text-white">Наименование авто</h4>
                                                <h5 class="row text-white">@car.SaleCar.Car.CarName</h5>
                                            </div>

                                            <div class="col m-3">
                                                <h4 class="row text-white">Стоимость авто:</h4>
                                                @{
                                                    var price = DiscountCounter.GetDiscount(@car.SaleCar);
                                                    if(price == 0)
                                                    {
                                                        price = @car.SaleCar.FullPrice;
                                                    }
                                                }
                                                <h4 class="row text-white">&euro; @price</h4>
                                            </div>
                                            <div class="col m-3 text-white">
                                                @car.CountChange
                                            </div>
                                            <div class="col m-3 d-flex justify-content-center align-items-center">
                                                <button asp-action="DeleteCar" asp-controller="Cart" asp-route-id="@car.ID" type="button" class="btn btn-danger">Убрать</button>
                                            </div>
                                        </div>
                                    </div>
                                    <hr style="color: white;"/>
                                }
                            }
                        </div>
                    </div>
                </div>

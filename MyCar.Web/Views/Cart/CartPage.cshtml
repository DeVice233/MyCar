                                        <div class="col text-center">@order.DateOfOrder</div>
                                        <div class="col text-center">@order.SumOrder</div>
                                        <div class="col text-center">
                                            <a asp-action="DetailsOrder" asp-controller="Cart" asp-route-id="@order.ID" class="btn btn-primary">Просмотреть</a>

@model ModelsApi.OrderApi

<div class="row justify-content-center text-center">
        <div class="col-md-8 col-lg-6">
            <div class="header mt-5">
                <h1 class="text-white">Сведения о заказе</h1>
            </div>
        </div>
    </div>

    <div class="px-4 my-5 text-center">      
            <div class="row p-3" style="background-color: #171717">
                <div class="col-4">
                    <h2 class="fw-bold" style="color: white;">Заказ номер №@Model.ID</h2>
                </div>
                <div class="col-4">
                    <h3 class="fw-bold" style="color: white;">Статус оплаты:</h3>
                    @if (@Model.Status.StatusName == "Завершен")
                    {
                        <h3 class="display-5 fw-bold text-success">
                            Заказ оплачен
                        </h3>
                    }
                    else
                    {
                        <h3 class="display-5 fw-bold text-danger">
                            Заказ не оплачен
                        </h3>
                    }
                </div>
                <div class="col-4">
                    <h3 class="fw-bold" style="color: white;">Сумма заказа:</h3>
                    <h3 class="fw-bold" style="color: white;">@Model.SumOrder</h3>
                </div>
            </div>

            

        @foreach(var car in @Model.WareHouses)
        {
            <div class="row flex-lg-row align-items-center  py-5 bg-white border-bottom">
                <div class="col-10 col-sm-8 col-lg-6">
                    <div class="product-Photo">
                        <a asp-action="DetailsCarView" asp-controller="Car" asp-route-CarName="@car.SaleCar.Car.CarName"><img src="~/CarImages/@car.SaleCar.Car.PhotoCar" /></a>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row">
                    
                        <div class="col p-5">
                            <div class="row border-bottom">
                                <h2>Марка:</h2>
                            </div>
                            <div class="row border-bottom">
                                <h2>Наименование:</h2>
                            </div>
                            <div class="row border-bottom">
                                <h2>Стоимость:</h2>
                            </div>
                        </div>

                        <div class="col p-5">
                            <div class="row border-bottom">
                                <h2>Example</h2>
                            </div>
                            <div class="row border-bottom">
                                <a style="text-decoration:none;" asp-action="DetailsCarView" asp-controller="Car" asp-route-CarName="@car.SaleCar.Car.CarName"><h3 class="product-title">@car.SaleCar.Car.CarName</h3></a>
                            </div>
                            <div class="row border-bottom">
                                <h2>@car.SaleCar.FullPrice</h2>
                            </div>
                        </div>

                     </div>

                </div>

            </div>

        }
            

    </div>

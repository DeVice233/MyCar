@model ModelsApi.CarApi
@{
    ViewData["Title"] = "DetailsCarView";
}

    <div class="container-fluid mt-5"> 
        <div class="row w-100">
            <div class="col-10">
                <h2 style="color: white;">
                    @Model.CarName
                </h2>
                <h4 style="color: white;">Our template platform will maximize the exposure of your inventory online</h4>
            </div>
            <div class="col-2">
                <h2 style="color: white;">
                    @Model.CarPrice

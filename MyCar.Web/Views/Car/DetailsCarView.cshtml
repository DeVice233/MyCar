                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="color: white;">
                                        Engine
                                    </th>
                                    <th style="color: white;">
                                        Unit
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var characteristic in @Model.CharacteristicCars.Where(s=> s.Characteristic.CharacteristicName.Contains("Мощность") ||
                                s.Characteristic.CharacteristicName.Contains("Объем")))
                                {
                                    <tr>
                                        <td style="color: white;">
                                            @characteristic.Characteristic.CharacteristicName:

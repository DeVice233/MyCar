<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCar.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyCar.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animate.min.css" />
    <link rel="stylesheet" href="~/css/Card.css" />
</head>
<body style="background-color: #171717; width:100%; box-sizing:border-box;">
    <header class="p-3 text-white sticky-top" style="background-color: black; opacity:80%">
        <div class="container w-100" style="box-sizing:border-box;">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <input type="checkbox" id="side-checkbox" />
    <div class="side-panel" style="opacity:100%;">
        <label class="side-button-2" for="side-checkbox">+</label>    
        <div class="side-title">Данные вашего аккаунта:</div>
        <h4>Никнейм: @User.Identity.Name</h4>
        <a class="dropdown-item" style="color: white;" asp-controller="Account" asp-action="Personal_Area" asp-route-data="@User.Identity.Name">Профиль</a>
        <a class="dropdown-item" style="color: white;" asp-controller="Cart" asp-action="CartPage">Корзина</a>
        @if (User.Identity.IsAuthenticated)
        {                               
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Выход (@User.Identity.Name)</a>
        }
        else
        {                               
            <a class="dropdown-item" asp-controller="Account" asp-action="Login">Вход</a>                                
        }
    </div>
    <div class="side-button-1-wr">
        <label class="side-button-1" for="side-checkbox">
            <div class="side-b side-open">
                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                </svg>
            </div>
            <div class="side-b side-close">
                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                </svg>
            </div>
        </label>    
    </div>
          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          @if (User.Identity.IsAuthenticated)
          {
          <li class="nav-item">
          <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
          </li>
          <li class="nav-item">
          <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
          </li>
          <li class="nav-item">
           <a class="nav-link text-white" asp-controller="Home" asp-action="CarView">Каталог</a>
          </li>
          <li class="nav-item">
          <a class="nav-link text-white" asp-controller="Home" asp-action="MarkView">Marks</a>
          </li>
                        @if (User.IsInRole("Администратор"))
                        {
                        <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="UserView">Users</a>
                        </li>
                        }
          }
          else
          {
          <li class="nav-item">
          <a class="nav-link text-white disabled" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
          </li>       
          <li class="nav-item">
          <a class="nav-link text-white disabled" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
          </li>
          
          }
          </ul>

            <form class="col-12 col-lg-auto">
                <breadcrumb>
                </breadcrumb>
            </form>

          @*<div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
               Аккаунт
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" asp-controller="Account" asp-action="Personal_Area" asp-route-data="@User.Identity.Name">Профиль</a>
                        <a class="dropdown-item" asp-controller="Cart" asp-action="CartPage">Корзина</a>
                            @if (User.Identity.IsAuthenticated)
                            {                               
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Выход (@User.Identity.Name)</a>
                            }
                            else
                            {                               
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Login">Вход</a>                                
                            }
          </div>
          </div>*@
      </div>
    </div>
  </header>
        <main role="main" class="pb-3 w-100" style="box-sizing">
            @RenderBody()
        </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MyCar.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/wow.min.js"></script>
              <script>
              new WOW().init();
              </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Card.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
